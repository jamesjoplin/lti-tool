# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
quote_type = single
indent_size = 2

[*.json]
quote_type = double
indent_size = 2

[*.yml]
quote_type = single
indent_style = space
indent_size = 2

[*.{hcl,tf}]
quote_type = double
indent_size = 2

[*.{cedar,cedarschema}]
quote_type = double
indent_size = 2
