{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "eslint workspace",
      "type": "shell",
      "command": "npm run lint:eslint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "oxlint workspace",
      "type": "shell",
      "command": "npm run lint:oxlint -- --format stylish",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "type check",
      "type": "shell",
      "command": "npm run type-check",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
